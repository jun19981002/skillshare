<table class="table">
  <tbody>
    <tr>
      <th>name</th> <th><%= @user.name %></th>
    </tr>
  </tbody>
</table>
<h2>Skill投稿一覧</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody> 
    <% @skill.each do |skill| %>
      <tr>
        <td><%= link_to skill_path(skill.id) do %>
          <%= skill.title %>
        <% end %>
        </td>
        <td><%= skill.body %></td>
      </tr>
    <% end %>
</tbody>
